{
  "domain_settings": {
    "default_tld": "com",
    "check_additional_tlds": ["net", "org"],
    "append_tld_to_output": true
  },
  "output_settings": {
    "session_retention_days": 30,
    "create_summary": true,
    "formats": {
      "csv": {"headers": ["Domain", "Available", "Score", "Syllables"]},
      "markdown": {"include_timestamp": true}
    }
  },
  "generation": {
    "max_length": 20,
    "min_length": 6,
    "max_domains": 2000,
    "patterns": {
      "single_word": false,
      "two_word_combo": true,
      "prefix_patterns": ["discover", "explore", "learn"],
      "suffix_patterns": ["diving", "divers", "dive", "scuba"],
      "creative_suffixes": [],
      "compound_words": false
    },
    "excluded_patterns": ["xxx", "test", "temp", "admin", "login"]
  },
  "scoring": {
    "base_score": 100,
    "syllable_penalty": 20,
    "syllable_threshold": 3,
    "length_penalty": 2
  },
  "keyword_categories": {
    "location_primary": {
      "words": ["thailand", "thai", "siam", "bangkok", "bkk", "krungthep"],
      "bonus": 30,
      "required": true
    },
    "diving_primary": {
      "words": ["scuba", "dive", "diver", "diving", "underwater", "ocean", "marine"],
      "bonus": 30,
      "required": true
    },
    "certification_terms": {
      "words": ["certified", "certification", "instructor", "professional", "openwater", "advanced"],
      "bonus": 25
    },
    "learning_terms": {
      "words": ["learn", "course", "training", "school", "academy", "education"],
      "bonus": 20
    },
    "service_terms": {
      "words": ["center", "shop", "pro", "expert", "master"],
      "bonus": 15
    },
    "ocean_terms": {
      "words": ["sea", "reef", "coral", "aqua", "blue"],
      "bonus": 10
    }
  },
  "special_combinations": [
    {
      "primary": "thai",
      "secondary": ["dive", "scuba", "diving"],
      "bonus": 35
    },
    {
      "primary": "bangkok",
      "secondary": ["dive", "scuba", "diving"],
      "bonus": 30
    }
  ],
  "penalties": {
    "hard_to_pronounce": {
      "patterns": ["xq", "zx", "qz", "xz", "qw", "wx"],
      "penalty": 50
    }
  }
}