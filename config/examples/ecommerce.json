{
  "domain_settings": {
    "default_tld": "com",
    "check_additional_tlds": ["shop", "store", "market"],
    "append_tld_to_output": true
  },
  "output_settings": {
    "session_retention_days": 30,
    "create_summary": true,
    "formats": {
      "csv": {"headers": ["Domain", "Available", "Score", "Syllables"]},
      "markdown": {"include_timestamp": true}
    }
  },
  "generation": {
    "max_length": 18,
    "min_length": 5,
    "max_domains": 2000,
    "patterns": {
      "single_word": false,
      "two_word_combo": true,
      "prefix_patterns": [],
      "suffix_patterns": ["mart", "shop", "store", "market"],
      "creative_suffixes": [],
      "compound_words": false
    },
    "excluded_patterns": ["xxx", "test", "fake", "scam"]
  },
  "scoring": {
    "base_score": 100,
    "syllable_penalty": 20,
    "syllable_threshold": 3,
    "length_penalty": 2
  },
  "keyword_categories": {
    "commerce_primary": {
      "words": ["shop", "buy", "store", "market", "deal"],
      "bonus": 30,
      "required": true
    },
    "product_terms": {
      "words": ["gear", "goods", "items", "products"],
      "bonus": 20,
      "required": true
    },
    "quality_descriptors": {
      "words": ["best", "top", "premium", "quality", "choice"],
      "bonus": 15
    },
    "value_terms": {
      "words": ["save", "discount", "value", "budget"],
      "bonus": 15
    },
    "convenience": {
      "words": ["quick", "fast", "easy", "express", "instant"],
      "bonus": 20
    },
    "trust_signals": {
      "words": ["trusted", "verified", "authentic", "genuine", "official"],
      "bonus": 25
    }
  },
  "special_combinations": [
    {
      "primary": "shop",
      "secondary": ["express", "direct", "now", "hub"],
      "bonus": 30
    },
    {
      "primary": "buy",
      "secondary": ["direct", "now", "best", "smart"],
      "bonus": 30
    }
  ],
  "penalties": {
    "hard_to_pronounce": {
      "patterns": ["xq", "zx", "qz", "xz"],
      "penalty": 50
    },
    "sketchy_terms": {
      "patterns": ["fake", "replica", "knockoff", "counterfeit"],
      "penalty": 30
    }
  }
}