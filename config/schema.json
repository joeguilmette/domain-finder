{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Domain Tool Configuration Schema",
  "description": "Configuration schema for domain generation, checking, and ranking tools",
  "type": "object",
  "properties": {
    "domain_settings": {
      "type": "object",
      "description": "Domain-specific settings",
      "properties": {
        "default_tld": {
          "type": "string",
          "description": "Default top-level domain",
          "default": "com"
        },
        "check_additional_tlds": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Additional TLDs to check for availability"
        },
        "append_tld_to_output": {
          "type": "boolean",
          "description": "Whether to append TLD to generated domains",
          "default": true
        }
      }
    },
    "output_settings": {
      "type": "object",
      "description": "Output file and format settings",
      "properties": {
        "session_retention_days": {
          "type": "integer",
          "description": "Number of days to retain session directories",
          "default": 30
        },
        "create_summary": {
          "type": "boolean",
          "description": "Create session summary file",
          "default": true
        },
        "formats": {
          "type": "object",
          "properties": {
            "csv": {
              "type": "object",
              "properties": {
                "headers": {
                  "type": "array",
                  "items": {"type": "string"}
                }
              }
            },
            "markdown": {
              "type": "object",
              "properties": {
                "include_timestamp": {"type": "boolean"}
              }
            }
          }
        }
      }
    },
    "generation": {
      "type": "object",
      "description": "Domain generation settings",
      "properties": {
        "max_length": {
          "type": "integer",
          "description": "Maximum domain length",
          "minimum": 1,
          "maximum": 63
        },
        "min_length": {
          "type": "integer",
          "description": "Minimum domain length",
          "minimum": 1
        },
        "max_domains": {
          "type": "integer",
          "description": "Maximum number of domains to generate"
        },
        "patterns": {
          "type": "object",
          "properties": {
            "single_word": {"type": "boolean"},
            "two_word_combo": {"type": "boolean"},
            "prefix_patterns": {
              "type": "array",
              "items": {"type": "string"}
            },
            "suffix_patterns": {
              "type": "array",
              "items": {"type": "string"}
            },
            "creative_suffixes": {
              "type": "array",
              "items": {"type": "string"}
            },
            "compound_words": {"type": "boolean"}
          }
        },
        "excluded_patterns": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Patterns to exclude from generated domains"
        }
      }
    },
    "scoring": {
      "type": "object",
      "description": "Domain scoring criteria",
      "properties": {
        "base_score": {
          "type": "integer",
          "description": "Starting score for all domains"
        },
        "syllable_penalty": {
          "type": "integer",
          "description": "Points deducted per syllable over threshold"
        },
        "syllable_threshold": {
          "type": "integer",
          "description": "Number of syllables before penalties apply"
        },
        "length_penalty": {
          "type": "integer",
          "description": "Points deducted per character"
        }
      }
    },
    "keyword_categories": {
      "type": "object",
      "description": "Categories of keywords with bonus points",
      "patternProperties": {
        ".*": {
          "type": "object",
          "properties": {
            "words": {
              "type": "array",
              "items": {"type": "string"}
            },
            "bonus": {
              "type": "integer",
              "description": "Bonus points for this category"
            }
          },
          "required": ["words", "bonus"]
        }
      }
    },
    "special_combinations": {
      "type": "array",
      "description": "Special word combinations with extra bonuses",
      "items": {
        "type": "object",
        "properties": {
          "primary": {"type": "string"},
          "secondary": {
            "type": "array",
            "items": {"type": "string"}
          },
          "bonus": {"type": "integer"}
        },
        "required": ["primary", "secondary", "bonus"]
      }
    },
    "penalties": {
      "type": "object",
      "description": "Penalty patterns and amounts",
      "patternProperties": {
        ".*": {
          "type": "object",
          "properties": {
            "patterns": {
              "type": "array",
              "items": {"type": "string"}
            },
            "penalty": {"type": "integer"}
          },
          "required": ["patterns", "penalty"]
        }
      }
    }
  }
}